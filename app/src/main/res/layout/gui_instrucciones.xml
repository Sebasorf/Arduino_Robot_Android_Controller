<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.personal.controladorderobotarduino.GUIInstrucciones"
    android:id="@+id/activity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comandos de voz"
        android:id="@+id/tv9"
        android:layout_marginTop="6dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0d0d0d"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Acelerar: permite al robot acelerar a una velocidad media"
        android:id="@+id/tv10"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Frenar: envía un mensaje al robot para que se detenga"
        android:id="@+id/tv11"
        android:layout_below="@+id/tv10"
        android:layout_alignLeft="@+id/tv10"
        android:layout_alignStart="@+id/tv10"
        android:layout_alignEnd="@+id/tv10"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Marcha atrás: permite al robot desplazarse marcha atrás a una velocidad media"
        android:id="@+id/tv12"
        android:layout_below="@+id/tv11"
        android:layout_alignLeft="@+id/tv11"
        android:layout_alignStart="@+id/tv11"
        android:layout_alignEnd="@+id/tv11"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Izquierda: indica al robot que debe girar a la izquierda"
        android:id="@+id/tv13"
        android:layout_below="@+id/tv12"
        android:layout_alignLeft="@+id/tv12"
        android:layout_alignStart="@+id/tv12"
        android:layout_alignEnd="@+id/tv12"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Derecha: indica al robot que debe girar a la derecha"
        android:id="@+id/tv14"
        android:layout_below="@+id/tv13"
        android:layout_alignLeft="@+id/tv13"
        android:layout_alignStart="@+id/tv13"
        android:layout_alignEnd="@+id/tv13"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Aumentar velocidad: envía un mensaje al robot para aumentar la velocidad"
        android:id="@+id/tv15"
        android:layout_below="@+id/tv14"
        android:layout_alignLeft="@+id/tv14"
        android:layout_alignStart="@+id/tv14"
        android:layout_alignEnd="@+id/tv14"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Disminuir velocidad: envía un mensaje al robot para disminuir la velocidad"
        android:id="@+id/tv16"
        android:layout_below="@+id/tv15"
        android:layout_alignLeft="@+id/tv15"
        android:layout_alignStart="@+id/tv15"
        android:layout_alignEnd="@+id/tv15"
        android:layout_marginTop="10dp" />

</RelativeLayout>
