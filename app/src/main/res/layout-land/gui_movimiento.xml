    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Parar"
        android:id="@+id/tv7"
        android:layout_centerInParent="@+id/ibtn5"
        android:layout_alignTop="@+id/ibtn2"
        android:layout_alignLeft="@+id/ibtn5"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Marcha atras"
        android:id="@+id/tv8"
        android:layout_alignTop="@+id/tv7"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtn1"
        android:background="@mipmap/ic_up_arrow"
        android:layout_below="@+id/tv3"
        android:layout_toLeftOf="@+id/tv3"
